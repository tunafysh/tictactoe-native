{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "tictactoe-native",
  "version": "0.1.0",
  "identifier": "com.tunafysh.tictactoe",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "title": "Tictactoe",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
